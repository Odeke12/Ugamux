head
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU' crossorigin='anonymous')
  // JavaScript Bundle with Popper
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ' crossorigin='anonymous')
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  
  title Document
  link(rel='stylesheet' href='/css/login.css')
.wrapper.fadeInDown
  #formContent
    // Tabs Titles
    h2.active Sign In 
    include partials/messages.pug
    // <h2 class="inactive underlineHover">Sign Up</h2>
    // Icon
    .fadeIn.first
      // 
        <img
        src="http://danielzawadzki.com/codepen/01/icon.svg"
        id="icon"
        alt="User Icon"
        />
    // Login Form
    form(method='POST' action='/users/login')
      input#login.fadeIn.second(type='text' name='email' placeholder='Email')
      input#password.fadeIn.third(type='password' name='password' placeholder='password')
      input.fadeIn.fourth(type='submit' value='Log In')
    // Remind Passowrd
    //
      <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
      </div>
