table.table.table-hover.container
  thead
    tr 
      th(scope='col') #
      th(scope='col') Image
      th(scope='col') Name
      th(scope='col') ArtistId
      th(scope='col') Area based
      th(scope='col') Location
      th(scope='col') Actions
  - var n = 0;
  each val in user 
    -n++
    - var values = val.artistid;
    //- #delete_artist.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal.fade(id='delete_artist'+val._id tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog 
            .modal-content 
                .modal-header 
                    h5#exampleModalLabel.modal-title Delete Artists
                    button.btn-close(type='button' data-dismiss='modal' aria-label='Close')
                .modal-body
                    p Do you really want to delete this artist ?
                    .modal-footer
                        button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                        a.btn.btn-danger(href='/delete/'+val._id type='button') Delete artist  
    
    .modal.fade(id='view_artist'+val._id tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog.modal-lg
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title View Artists
                    button.btn-close(type='button' data-dismiss='modal' aria-label='Close')
                .modal-body
                    .row
                        img.rounded.float-start(src=val.img alt='image' style='height: 300px; width: 250px;')
                    .row
                        .form-group.col-md-6
                            b Artist name
                            p #{val.username}
                        .form-group.col-6
                            b Stage name
                            p #{val.stagename}
                    .row
                        .form-group.col-md-6
                            b Email
                            p #{val.email}
                        .form-group.col-6
                            b Location
                            p #{val.location}
                    .row
                        .form-group.col-md-6
                            b Contact
                            p #{val.contact}
                        .form-group.col-md-6
                            b DOB
                            p #{moment(val.dob).format('DD/MM/YYYY')} 
                            
                    .row 
                        .form-group.col-md-6
                            b Area based
                            p Soroti
                        .form-group.col-md-6
                            b Date started
                            p #{moment(val.datestarted).format('DD/MM/YYYY')}
                    .row 
                            b Profile
                            p #{val.profile}
                .modal-footer 
                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                   
    //- #edit_artist.modal.fade(role='document')
    .modal.fade(id='edit_artist'+val._id tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true' role='document')
        .modal-dialog.modal-lg
            .modal-content 
                .modal-header
                    h4.modal-title Edit Artist
                .modal-body 
                    form.artist-form(method='post' action='/update/'+val._id style='max-width: 600px; margin: auto' name='updateform')
                
                        .row   
                            img.rounded.mx-auto.d-block.edit-image(src=val.img alt='image' style='height: 300px; width: 250px;')
                            label(for='start') Stage name:
                            p#stage-error(style='display: none;')
                            .input-icons
                                i.fa.fa-music.icon
                                input.input-field(name='stagename' type='text' placeholder='TOdeke' value=val.stagename)
                        .row
                            .col-6
                                label(for='album') Contact:
                                p#contact-error(style='display: none;')
                                .input-icons
                                    i.fa.fa-phone.icon  
                                    input#contact.input-field(name='contact' type='number' placeholder='Contact' value=val.contact)
                            .col-6
                                label(for='nin') Area based:
                                p#area-error(style='display: none;')
                                .input-icons
                                    i.fa.fa-compass.icon
                                    input#area.input-field(name='area' type='text' placeholder='Kampala' value=val.area)

                        .row
                            .col-6
                                label(for='album') Number of albums:
                                p#albums-error(style='display: none;')
                                .input-icons
                                    i.fa.fa-id-badge.icon
                                    input#album.input-field(name='albums' type='number' placeholder='Number of albums' value=val.albums)
                            .col-6
                                label(for='location') Location:
                                p#location-error(style='display: none;')
                                .input-icons
                                    i.fa.fa-location-arrow.icon
                                    input#location.input-field(name='location' type='text' placeholder='Kampala' value=val.location)
                        .row
                            label(for='profile') Profile:
                            p#profile-error(style='display: none;')
                            .input-icons
                                i.fa.fa-user-circle.icon
                                textarea#profile.input-field(name='profile' cols='23' rows='8') #{val.profile}

                        .row.pt-3.pb-2
                            .col-6
                                button.btn.btn.btn-block.col-12.submit(type='submit' name='submitbtn' style=' background-color: darkorange; color: white;') Submit
                            .col-6
                                button.btn.btn.btn-block.col-12.reset(type='reset' name='reset' style=' background-color: red; color: white;') Reset
                    .modal-footer
                        button.btn.btn-secondary(type='button' data-dismiss='modal') Close
            
     
    tbody
        tr
        th(scope='row')=n
        td
            img.user-img(src=val.img alt='')
        td #{val.stagename}
        td #{val.artistid} 
        td #{val.location}
        td #{val.area}
