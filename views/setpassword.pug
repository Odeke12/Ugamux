head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  script(src='/javascript/password.js')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
  
  title Document
  link(rel='stylesheet' href='/css/login.css')

.wrapper.fadeInDown
  #formContent
    // Tabs Titles
    h2.active Create password 
    include partials/messages.pug
    // <h2 class="inactive underlineHover">Sign Up</h2>
    // Icon
    .fadeIn.first
      //   
        <img
        src="http://danielzawadzki.com/codepen/01/icon.svg"
        id="icon"
        alt="User Icon"
        />
    // Login Form 
    form(name='passwordChange' method='post' onsubmit='return validate()' action='')
      p#password1-error(style='display: none')
      input#login.fadeIn.second(type='password' name='password1' placeholder='Enter password')
      p#password2-error(style='display: none')
      input#password.fadeIn.third(type='password' name='password2' placeholder='Re enter password')
      input.fadeIn.fourth.login_btn(type='submit' name='submitbtn' value='Log In')
    // Remind Passowrd
    //
      <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
      </div>
