#exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title
          | Update details
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        form.row.g-3(method='POST' name='updatecomedian' action='/comedians/update/'+user._id onsubmit='return checkComedian()') 
          .col-md-6    
            label.form-label(for='inputEmail4') Stage name
            input#inputEmail4.form-control(name='stagename' type='text' value=user.stagename)
            small#stagename-error(style='display: none') 
          .col-md-6
            label.form-label(for='inputPassword4') Area based
            input#inputNumber4.form-control(name='area' type='text' value=user.area) 
            small#area-error(style='display: none') 
          .col-12
            button.btn.btn-primary(type='submit')
              | Update
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal')
          | Close

#passwordModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header 
        h5#exampleModalLabel.modal-title
          | Change password
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        form.row.g-3(name='passwordChange' method='post' onsubmit='return validate()' action='/comedians/password_update/'+user.email) 
          .col-md-6  
            label.form-label(for='inputEmail4') Enter password 
            input#inputPassword4.form-control(name='password1' type='password')
            p#password1-error(style='display: none') 
          .col-md-6
            label.form-label(for='inputPassword4') Re-enter password
            input#inputPassword3.form-control(name='password2' type='password') 
            p#password2-error(style='display: none')
          .col-12
            button.btn.btn-primary(type='submit' name="submitbtn")
              | Update
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal')
          | Close    

