              h4 Location:
              p Bukoto block 66
            .email
              i.bi.bi-envelope
              h4 Email:
              p info@ugaamux.com
            .phone
              i.bi.bi-phone
              h4 Call:
              p +256 755895088
        .col-lg-8.mt-5.mt-lg-0
          include partials/messages.pug
          form(action='/contact/register' method='post' name='contact' onsubmit='return validate()')  
            .row
              .col-md-6.form-group
                input#name.form-control(type='text' name='name' placeholder='Your Name')
                p#name-error(style='display: none;')
              .col-md-6.form-group.mt-3.mt-md-0
