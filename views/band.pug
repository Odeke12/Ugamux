.main
  form.d-flex.search-artist(method='post' action='/bands/show')
    select#filter.form-select(aria-label='Default select example' name='filter')
      option(selected='' value='Name') Band name
      option(value='Genre') Genre
      option(value='Home') Home area
      option(value='Albums') Album number
      option(value='Songs') Songs
    input.form-control.me-2(type='search' placeholder='Search band' aria-label='Search' name='search')
    button.btn.btn-outline-success(type='submit')
      | Search 

  if error == true
    .alert.alert-warning.alert-dismissible.fade.show(role='alert')
      | No search results
      button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
  .content
    .row.row-cols-1.row-cols-md-2.g-4
      if user.length
      each val in user
        .col.band-area
            .card.band_info
            img.card-img-top.band_img(src= val.bandicon alt='Band image')
            .card-body.band-text
                h5.card-title #{val.bandname}
                p.card-text
                | #{val.slogan}

